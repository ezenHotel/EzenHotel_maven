<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="member">

	<insert id="insert" parameterType="hashMap"
		useGeneratedKeys="true" keyProperty="member_id">
			<![CDATA[
			insert into memList (uId, uPw, uName, uEmail)
			values
			(#{uId}, #{uPw}, #{uName}, #{uEmail})
			]]>
	</insert>

	<select id="select_detail" parameterType="hashMap"
		resultType="hashMap">
			 <![CDATA[
			 select uId, uPw, uName, uEmail from memList where no = #{no}
			 ]]>
	</select>
	
	<select id="select_list" parameterType="hashMap" resultType="hashMap">
			 <![CDATA[
			 select * from memList order by no desc
			 ]]>
	</select>	
	
	<!-- 로그인을 위한 사용자 아이디 및 패스워드 일치 조회 시작 -->
	<select id="login" parameterType="hashMap" resultType="hashMap" >
		<![CDATA[
		select uid, upw
		from memberList
		where uid = #{uid}
		and upw = #{upw}
		]]>
	</select>
	<!-- 로그인을 위한 사용자 아이디 및 패스워드 일치 조회 끝 -->

	<!-- 마이페이지 회원 정보 출력을 위한 조회 시작 -->
	<select id="mypage_print" parameterType="hashMap" resultType="hashMap">
		<![CDATA[
		select *
		from memberList
		where uid = #{sKey}
		]]>
	</select>
	<!-- 마이페이지 회원 정보 출력을 위한 조회 끝 -->
</mapper>